<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:C_MobileProject"
             xmlns:views="clr-namespace:C_MobileProject.Views"
             x:Class="C_MobileProject.App">
    <Application.MainPage>
        <!-- This is where we initialize the main page to show the LoginPage initially -->
        <Shell>
            <ShellItem Route="LoginPage">
                <ShellContent ContentTemplate="{DataTemplate views:LoginPageView}" />
            </ShellItem>
        </Shell>
    </Application.MainPage>
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
